{
  "compilerOptions": {
    "lib": [
      "es6"
    ],
    "target": "ES3",
    "outDir": "dist",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "alwaysStrict": true,
    "stripInternal": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": true
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
